# Company Research Mapping Tool - Environment Variables
# Copy this file to .env and fill in your values

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Search API Keys
# Tavily - AI-optimized search (https://tavily.com)
TAVILY_API_KEY=your_tavily_api_key_here

# SerpAPI - Structured Google/LinkedIn results (https://serpapi.com)
SERP_API_KEY=your_serp_api_key_here

# Note: At least one API key is required for live search
# Without API keys, the app uses mock data for testing


# PostgreSQL Database Configuration
DB_USER=db_user
DB_PASSWORD=user_password
DB_HOST=localhost
DB_PORT=port
DB_NAME=db_name
DB_SCHEMA=notch


OPENROUTER_API_KEY=your_openrouter_api_key_here
# Optional
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_CALL_ANALYSIS_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_EXEC_EXTRACTION_MODEL=anthropic/claude-3.5-sonnet

# Optional attribution headers
OPENROUTER_SITE_URL=https://yourdomain.com
OPENROUTER_APP_NAME=Company Research Mapping Tool